<div id="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">

        <h2><%= t(:new_project, :scope => [:projects]) %></h2>

        <br />
        <%= form_for(@project, :url => projects_path, :html => { :method => :post, :class => "form-horizontal"}) do |f| %>
          <fieldset>
            <%= render "shared/validation_error", :resource => @project %>
            <hr />
            <%= render "form", :f => f %>

            <div class="form-actions col-md-12">
              <button type="submit" class="btn btn-primary btn-large"><%= t(:create, :scope => [:common]) %></button>
              <button type="button" class="btn btn-default btn-large" onclick="window.location.href='<%= root_path %>'"><%= t(:cancel, :scope => [:common]) %></button>
            </div> <%#= form-actions %>
          </fieldset>
        <% end %>

      </div> <%#= .span12 %>
    </div> <%#= .row %>
  </div> <%#= .container %>
</div> <%#= content %>
