
<div class="account-container register stacked">

  <div class="content clearfix">

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

      <h1><%= t(:forgot_password, :scope => [:authentication, :login]) %></h1>

      <div class="login-fields">



        <div class="field">
          <%= f.label :email, , t(:email, :scope => [:account]) %>
          <%= f.email_field :email, :class => "login", :placeholder => , t(:email, :scope => [:account]), :required => "true" %>
        </div> <%#= /field %>


      </div> <%#= /login-fields %>

      <div class="login-actions">

        <button class="button btn btn-primary btn-large"><%= t(:send_password, :scope => [:authentication, :login]) %></button>

      </div> <%#= .actions %>

    <% end %>

  </div> <%#= /content %>

</div> <%#= /account-container %>


<%#= Text Under Box %>
<div class="login-extra">
  <%= t(:account_exists, :scope => [:authentication, :login]) %> <%= link_to t(:sign_in, :scope => [:authentication, :login]), new_user_session_path %>
</div> <%#= /login-extra %>


