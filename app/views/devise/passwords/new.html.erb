
<div class="account-container register stacked">

  <div class="content clearfix">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <h1>Forgot password?</h1>

      <div class="login-fields">

       

        <div class="field">
          <%= f.label :email, "Email Address" %>
          <%= f.email_field :email, :class => "login", :placeholder => "Email Address", :required => "true" %>
        </div> <!-- /field -->


      </div> <!-- /login-fields -->

      <div class="login-actions">

        <button class="button btn btn-primary btn-large">Send Password</button>

      </div> <!-- .actions -->

    <% end %>

  </div> <!-- /content -->

</div> <!-- /account-container -->


<!-- Text Under Box -->
<div class="login-extra">
	Already have an account? <%= link_to "Login", new_user_session_path %>
</div> <!-- /login-extra -->


