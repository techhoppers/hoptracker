
<div class="account-container register stacked">

  <div class="content clearfix">

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <h1><%= t(:create_account, :scope => [:authentication, :signup]) %></h1>

      <div class="login-fields">

        <p><%= t(:mandatory_text, :scope => [:authentication, :signup]) %>:</p>

        <% if @user.errors.any? %>
          <div class="alert alert-danger alert-error">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <ul>
              <% @user.errors.full_messages.uniq.each do |message| %>
                <li> <%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :username, t(:username, :scope => [:account]) %>
          <%= f.text_field :username, autofocus: true, :class => "login", :placeholder => "Username", :required => "true" %>
        </div> <%#= field %>

        <div class="field">
          <%= f.label :first_name, t(:first_name, :scope => [:account]) %>
          <%= f.text_field :first_name, autofocus: true, :class => "login", :placeholder => "First Name", :required => "true" %>
        </div> <%#= field %>

        <div class="field">
          <%= f.label :last_name, t(:last_name, :scope => [:account])%>
          <%= f.text_field :last_name, :class => "login", :placeholder => "Last Name", :required => "true" %>
        </div> <%#= field %>

        <div class="field">
          <%= f.label :email, t(:email, :scope => [:account]) %>
          <%= f.email_field :email, :class => "login", :placeholder => "Email", :required => "true" %>
        </div> <%#= field %>

        <div class="field">
          <%= f.label :primary_phone, t(:primary_phone, :scope => [:account]) %>
          <%= f.text_field :primary_phone, :class => "login", :placeholder => "Phone" %>
        </div> <%#= field %>

        <div class="field">
          <%= f.label :password, t(:password, :scope => [:account]) %>
          <%= f.password_field :password, autocomplete: "off", :class => "login", :placeholder => "Password", :required => "true", "data-toggle" => "tooltip", "data-original-title" => "Minimum 8 Characters", "data-placement" => "right" %>

        </div> <%#= field %>

        <div class="field">
          <%= f.label :password_confirmation, , t(:confirm_password, :scope => [:account]) %>
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "login", :placeholder => "Confirm Password", :required => "true" %>
        </div> <%#= field %>

      </div> <%#= login-fields %>

      <div class="login-actions">

        <button class="button btn btn-primary btn-large"><%= t(:register, :scope => [:authentication, :signup]) %></button>

      </div> <%#= actions %>

    <% end %>

  </div> <%#= content %>

</div> <%#= account-container %>


<%#= Text Under Box %>
<div class="login-extra">
  <%= t(:account_exists, :scope => [:authentication, :login]) %> <%= link_to t(:sign_in, :scope => [:authentication, :login]), new_user_session_path %>
</div> <%#= login-extra %>


