      <%= f.select :status, Issue::STATUSES.map{|it| [it.humanize, it]}, {}, {:class => "form-control"} %>
    </div> <%#= controls %>
  </div> <%#= form-group %>
</div>

<div class="col-md-3">
  <div class="form-group">
    <%= f.label :milestone_id, t(:milestone, :scope => [:issues, :issue_form])%>
    <div class="controls">
      <%= f.select :milestone_id, @milestones.map{|m| [m.name,m.id]}, {}, {:class => "form-control"}  %>
    </div> <%#= controls %>
  </div> <%#= form-group %>
</div>

