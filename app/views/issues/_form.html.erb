<div class="col-md-12">
  <div class="form-group">
    <%= f.label :title, t(:title, :scope => [:issues, :issue_form]) %>
    <div class="controls">
      <%= f.text_field :title, :class => "form-control", :required => true %>
    </div> <%#= controls %>
  </div> <%#= form-group %>
</div>

<div class="col-md-4">
  <div class="form-group">
    <%= f.label :issue_type, t(:issue_type, :scope => [:issues, :issue_form])%>
    <div class="controls">
      <%= f.select :issue_type,Issue::ISSUE_TYPES.map{|it| [it.humanize, it]}, {}, {:class => "form-control" }%>
    </div> <%#= controls %>
  </div> <%#= form-group %>
</div>

<div class="col-md-4">
  <div class="form-group">
    <%= f.label :priority, t(:priority, :scope => [:issues, :issue_form]) %>
    <div class="controls">
      <%= f.select :priority, Issue::PRIORITIES.map{|it| [it.humanize, it]}, {}, {:class => "form-control"}%>
    </div> <%#= controls %>
  </div> <%#= form-group %>
</div>

<div class="col-md-4">
  <div class="form-group">
    <%= f.label :status, t(:status, :scope => [:issues, :issue_form])%>
